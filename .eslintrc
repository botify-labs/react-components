{
    "parser": "babel-eslint",

    "plugins": [
        "react"
    ],

    "env": {
        "browser": true,
        "node": true,
    },

    "globals": {
        // google APIs are not CommonJS
        "google": true,
    },

    "rules": {

        //React rules
        "react/display-name":               2,
        "react/jsx-boolean-value":          2,
        "react/jsx-quotes":                 [2, "double"],
        "react/jsx-no-undef":               2,
        "react/jsx-sort-props":             0,
        "react/jsx-sort-props-types":       0,
        "react/jsx-uses-react":             2,
        "react/jsx-uses-vars":              2,
        "react/no-did-mount-set-state":     1,
        "react/no-did-update-set-state":    1,
        "react/no-multi-comp":              0,
        "react/no-unknown-property":        2,
        "react/prop-types":                 2,
        "react/react-in-jsx-scope":         2,
        "react/self-closing-comp":          2,
        "react/wrap-multilines":            2,

        //Possible Errors
        "comma-dangle":             [2, "always-multiline"],
        "no-cond-assign":           2,
        "no-console":               1,
        "no-constant-condition":    2,
        "no-control-regex":         2,
        "no-debugger":              2,
        "no-dupe-args":             2,
        "no-dupe-keys":             2,
        "no-duplicate-case":        2,
        "no-empty-class":           2,
        "no-ex-assign":             2,
        "no-extra-boolean-cast":    2,
        "no-extra-parens":          0,
        "no-extra-semi":            2,
        "no-func-assign":           2,
        "no-inner-declarations":    2,
        "no-invalid-regexp":        2,
        "no-irregular-whitespace":  2,
        "no-negated-in-lhs":        2,
        "no-obj-calls":             2,
        "no-regex-spaces":          2,
        "no-reserved-keys":         0,
        "no-sparse-arrays":         2,
        "no-unreachable":           2,
        "use-isnan":                2,
        "valid-jsdoc":              [1, { //Only warning because for now ESLint doesn't handle correclty ES6 arrow functions
                                      "prefer": {"returns": "return"},
                                      "requireParamDescription": false,
                                      "requireReturn": false,
                                      "requireReturnDescription": false
                                    }],
        "valid-typeof":             2,

        //Best Practices
        "block-scoped-var":         0,
        "complexity":               0,
        "dot-notation":             [2, {"allowKeywords": true}],
        "eqeqeq":                   2,
        "guard-for-in":             2,
        "indent":                   [2, 2],
        "no-alert":                 2,
        "no-caller":                2,
        "no-eq-null":               2,
        "no-eval":                  2,
        "no-extend-native":         2,
        "no-fallthrough":           0,
        "no-irregular-whitespace":  2,
        "no-iterator":              0,
        "no-labels":                2,
        "no-loop-func":             2,
        "no-multi-str":             2,
        "no-new":                   0,
        "no-new-func":              2,
        "no-new-wrappers":          2,
        "no-proto":                 2,
        "no-script-url":            2,
        "wrap-iife":                2,

        //Strict Mode
        "strict":                   [2, "never"], //Made by babel

        //Variables
        "no-catch-shadow":              2,
        "no-delete-var":                2,
        "no-label-var":                 2,
        "no-shadow-restricted-names":   2,
        "no-shadow":                    2,
        "no-undef":                     2,
        "no-undefined":                 2,
        "no-unused-vars":               [2, {"vars": "all", "args": "none"}], //No arguments checking in order to allow explicit function interfaces even if not completly used
        "no-use-before-define":         [2, "nofunc"],

        //Node.js

        //Stylistic Issues
        "camelcase":                2,
        "comma-style":              [2, "last"],
        "eol-last":                 2,
        "new-cap":                  [2, "newIsCap"], // Immutable collections and React mixins do not respect this rule
        "no-new-object":            2,
        "no-underscore-dangle":     0, // allow private naming with _
        "quotes":                   [1, "single", "avoid-escape"],
        "semi":                     [2, "always"],
        "space-after-keywords":     [2, "always"],
        "space-before-blocks":      [2, "always"],
        "space-infix-ops":          2,

        //ECMAScript 6
        "generator-star-spacing":   [2, "after"],
        "no-var":                   2,
        "object-shorthand":         [2, "methods"], //"properties" does not work correclty for now with ES6 rest operator

        //Legacy
        "max-depth":                0,
        "max-len":                  0,
        "max-params":               0,
        "max-statements":           0,
        "no-bitwise":               2, // to prevent mistyped
        "no-plusplus":              0,

    }
}
